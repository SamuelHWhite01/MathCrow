rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection
    match /users/{userId} {
      allow read: if readStudent(userId);
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Classrooms collection
    match /classrooms/{classroomId} {
      allow read, create: if request.auth != null;
      allow update, delete: if false;
    }

    function readStudent(userId) {
      return request.auth != null
        && (request.auth.uid == userId
          || (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isTeacher == true
              && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.classroomId
                 == resource.data.classroomId));
    }
  }
}
